        <section class="test">

            <div class="form-wrapper">

                <div class="form-container register">
                    
                    <form action="/register" method="post" id="msform">
                        <ul id="progressbar">
                            <li class="active">Account Setup</li>
                            <li>Personal Details</li>
                            <li>Account Preferences</li>
                        </ul>
                        <fieldset>
                            <h2 class="fs-title">Create Your Account</h2>
                            <h3 class="fs-subtitle">
                                <% for(var i in messages) { %>

                                    <div class="flash">
                                        Registration Error:
                                        <%= messages[i] %>
                                    </div>
                                <% } %>
                            </h3>
                            <input type="text" name="email" placeholder="Email" />
                            <input type="text" name="username" placeholder="Username"/>
                            <input type="password" name="password" placeholder="Password" />
                            <input type="password" name="cpass" placeholder="Confirm Password" />
                            <input type="button" name="next" class="next action-button" value="Next" />
                            <div class="registerOr">
                                <h3>or</h3>
                                <a class='fb-btn' href="/oauth/facebook">
                                    <span>
                                        Register with Facebook
                                    </span>
                                </a>
                            </div>
                        </fieldset>
                        <fieldset>
                            <h2 class="fs-title">Personal Details</h2>
                            <h3 class="fs-subtitle">We might sell them.</h3>
                            <input type="text" name="firstname" placeholder="First Name" />
                            <input type="text" name="lastname" placeholder="Last Name" />
                            <select name="gender">
                                <option value="drop" disabled selected>-Click For Dropdown-</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <input type="text" name="birthday" placeholder="Birthday (MM/DD/YYYY)" />
                            <input type="button" name="previous" class="previous action-button" value="Previous">
                            <input type="button" name="next" class="next action-button" value="Next" />                            
                        </fieldset>
                        <fieldset>
                            <h2 class="fs-title">Account Preferences</h2>
                            <h3 class="fs-subtitle">Optional. Feel free to set them up later.</h3>
                            <input type="text" name="city" placeholder="City" />
                            <input type="button" name="previous" class="previous action-button" value="Previous" />
                            <input type="submit" class="action-button" value="Submit" />
                        </fieldset>
                    </form>


